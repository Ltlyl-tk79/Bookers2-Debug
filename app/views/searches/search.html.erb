<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <h2><%= "User search for #{@word}" %></h2>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag(user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg") %>
        </td>
        <td><%= user.name %></td>
        <td>
          <%= link_to 'show', user_path(user) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  <% else %>
    <h2><%= "Book search for #{@word}" %></h2>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
